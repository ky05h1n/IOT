# Vagrantfile â€” Part 2: one VM (K3s server) + Ingress + 3 apps
LOGIN = ENV.fetch("LOGIN", "mehdi")
SERVER_IP = "192.168.56.110"

Vagrant.configure("2") do |config|
  config.ssh.insert_key = true
  config.vm.box = ENV.fetch("BOX", "ubuntu/jammy64")

  config.vm.define "#{LOGIN}S" do |srv|
    srv.vm.hostname = "#{LOGIN}S"
    srv.vm.network "private_network", ip: SERVER_IP
    srv.vm.provider "virtualbox" do |vb|
      vb.name = "#{LOGIN}S"
      vb.cpus = 1
      vb.memory = 1024
    end
    srv.vm.provision "shell", path: "scripts/install_k3s_server.sh", args: [SERVER_IP]
    srv.vm.provision "shell", path: "scripts/apply_manifests.sh"
  end
end
